<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/vertical_margin"
    android:paddingBottom="@dimen/vertical_margin">

    <TextView
        android:id="@+id/textview_torrents_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/progressbar_torrents_item"
            style="@style/NumberProgressBar_Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageview_torrents_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/torrents_option_button_size"
            android:src="@drawable/ic_server_torrents_folder"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageview_torrents_option_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/torrents_option_button_size"
            android:src="@drawable/button_torrents_option_download"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageview_torrents_option_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/torrents_option_button_size"
            android:src="@drawable/button_torrents_option_task"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>